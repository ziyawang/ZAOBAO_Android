<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:background="@drawable/bgfff_rad5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_alignParentLeft="true"
                android:layout_marginTop="9dp"
                android:layout_marginLeft="16dp"
                android:id="@+id/image_type"
                android:layout_width="20dp"
                android:layout_height="20dp" />
            <TextView
                android:textSize="11sp"
                android:textColor="#999"
                android:layout_marginRight="11dp"
                android:id="@+id/text_time"
                android:layout_alignParentRight="true"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />
            <TextView
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_toLeftOf="@+id/text_time"
                android:textColor="#333"
                android:textSize="16sp"
                android:layout_marginTop="9dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:layout_toRightOf="@+id/image_type"
                android:id="@+id/text_type"
                android:layout_width="wrap_content"
                android:layout_height="20dp" />

        </RelativeLayout>

        <TextView
            android:lineSpacingMultiplier="1.2"
            android:ellipsize="end"
            android:maxLines="3"
            android:id="@+id/des"
            android:layout_marginTop="4dp"
            android:layout_marginRight="11dp"
            android:layout_marginLeft="16dp"
            android:textSize="15sp"
            android:textColor="#555"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:background="#EBEBEB"
            android:layout_width="match_parent"
            android:layout_height="25dp">

            <RelativeLayout
                android:id="@+id/relative_01"
                android:background="#fff"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_centerVertical="true"
                        android:id="@+id/image_01"
                        android:src="@mipmap/zixun_72"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#999"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="6dp"
                        android:layout_toRightOf="@+id/image_01"
                        android:id="@+id/text_01"
                        android:text="@string/consult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginLeft="1px"
                android:id="@+id/relative_02"
                android:background="#fff"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_centerVertical="true"
                        android:id="@+id/image_02"
                        android:src="@mipmap/liuyan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#999"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="6dp"
                        android:layout_toRightOf="@+id/image_02"
                        android:id="@+id/text_02"
                        android:text="@string/message"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginLeft="1px"
                android:id="@+id/relative_03"
                android:background="#fff"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_centerVertical="true"
                        android:id="@+id/image_03"
                        android:src="@mipmap/shoucang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#999"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="6dp"
                        android:layout_toRightOf="@+id/image_03"
                        android:id="@+id/text_03"
                        android:text="@string/unCollect"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginLeft="1px"
                android:id="@+id/relative_04"
                android:background="#fff"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_centerVertical="true"
                        android:id="@+id/image_04"
                        android:src="@mipmap/share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:textSize="12sp"
                        android:textColor="#999"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="6dp"
                        android:layout_toRightOf="@+id/image_04"
                        android:id="@+id/text_04"
                        android:text="@string/share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>