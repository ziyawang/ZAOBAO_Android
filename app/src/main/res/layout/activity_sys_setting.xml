<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:background="#f4f4f4"
    tools:context="com.ziyawang.ziyadaily.activity.SysSettingActivity">

    <!--标题页面-->
    <include layout="@layout/common_title_pre" />

    <!--资芽公约-->
    <TextView
        android:textSize="15sp"
        android:textColor="#333"
        android:paddingLeft="16dp"
        android:background="#ffffff"
        android:paddingRight="16dp"
        android:drawableRight="@mipmap/next"
        android:gravity="center_vertical"
        android:id="@+id/set_ziya_rule"
        android:text="资芽公约"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <!--推荐资芽-->
    <TextView
        android:textSize="15sp"
        android:textColor="#333"
        android:layout_marginTop="1dp"
        android:paddingLeft="16dp"
        android:background="#ffffff"
        android:paddingRight="16dp"
        android:drawableRight="@mipmap/next"
        android:gravity="center_vertical"
        android:text="把资芽早报推荐给朋友"
        android:id="@+id/set_ziya_share"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <!--清除缓存-->
    <RelativeLayout
        android:layout_marginTop="1dp"
        android:paddingLeft="16dp"
        android:background="#ffffff"
        android:id="@+id/set_clean_relative"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:textSize="15sp"
            android:textColor="#333"
            android:text="清除缓存"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/set_clean_text"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/next"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16dp"
            android:layout_marginEnd="16dp" />
    </RelativeLayout>

    <TextView
        android:textSize="15sp"
        android:textColor="#333"
        android:id="@+id/app_info"
        android:gravity="center_vertical"
        android:layout_marginTop="1dp"
        android:paddingLeft="16dp"
        android:background="#ffffff"
        android:text="版本信息"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <TextView
        android:textSize="15sp"
        android:textColor="#333"
        android:id="@+id/app_check"
        android:gravity="center_vertical"
        android:layout_marginTop="1dp"
        android:paddingLeft="16dp"
        android:background="#ffffff"
        android:text="检查更新"
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <TextView
        android:visibility="gone"
        android:background="#fff"
        android:id="@+id/logout"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="15dp"
        android:text="退出登录"
        android:textColor="#333"
        android:layout_width="match_parent"
        android:layout_height="44dp" />


</LinearLayout>
