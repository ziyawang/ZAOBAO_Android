<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relative_title"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        android:paddingLeft="12dp"
        android:paddingRight="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.ziyawang.ziyadaily.views.JustifyTextView
            android:lineSpacingMultiplier="1.2"
            android:textColor="#000"
            android:textSize="20sp"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:id="@+id/time"
        android:layout_marginLeft="12dp"
        android:textSize="12sp"
        android:textColor="#999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/relative_des"
        android:paddingTop="15dp"
        android:paddingBottom="28dp"
        android:paddingLeft="12dp"
        android:paddingRight="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.ziyawang.ziyadaily.views.JustifyTextView
            android:lineSpacingMultiplier="1.5"
            android:textColor="#000"
            android:textSize="16sp"
            android:id="@+id/des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <WebView
        android:layout_marginRight="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="10dp"
        android:scrollbars="vertical"
        android:id="@+id/detContent01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!--项目详情区域-->
    <LinearLayout
        android:visibility="gone"
        android:orientation="vertical"
        android:id="@+id/relative_pictureDet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_below="@+id/pictureDet"
            android:background="#EBEBEB"
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="项目详情"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:layout_alignParentLeft="true"
                android:textSize="15sp"
                android:textColor="#333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:src="@mipmap/details_logo"
                android:layout_marginRight="16dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <TextView
            android:layout_below="@+id/pictureDet"
            android:background="#EBEBEB"
            android:layout_width="match_parent"
            android:layout_height="1dp" />

        <ImageView
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:id="@+id/pictureDet"
            android:layout_marginTop="1dp"
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ImageView>
    </LinearLayout>

    <TextView
        android:paddingLeft="15dp"
        android:gravity="center_vertical"
        android:text="留言区"
        android:id="@+id/line"
        android:layout_below="@+id/pictureDet"
        android:background="#f4f4f4"
        android:layout_width="match_parent"
        android:layout_height="44dp" />

    <EditText
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:layout_marginTop="30dp"
        android:id="@+id/edit_des01"
        android:padding="12dp"
        android:gravity="left|top"
        android:textSize="13sp"
        android:hint="点击输入留言..."
        android:textColorHint="#999"
        android:layout_marginRight="13dp"
        android:layout_marginLeft="13dp"
        android:background="@drawable/bgf4_rad5"
        android:minHeight="120dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginBottom="10dp"
        android:id="@+id/text_send01"
        android:layout_marginTop="10dp"
        android:layout_marginRight="13dp"
        android:layout_gravity="end"
        android:gravity="center"
        android:text="发送"
        android:background="@drawable/commit"
        android:textColor="#fff"
        android:textSize="14sp"
        android:layout_width="60dp"
        android:layout_height="22dp" />

</LinearLayout>